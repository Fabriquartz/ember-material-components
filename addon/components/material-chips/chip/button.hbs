<span
  class='mdc-evolution-chip__cell mdc-evolution-chip__cell--primary {{@class}}'
  role='gridcell'
>
  <button
    class='mdc-evolution-chip__action mdc-evolution-chip__action--primary'
    type='button'
    tabindex='0'
    role={{if @selectable 'option'}}
    ...attributes
  >
    <span
      class='mdc-evolution-chip__ripple mdc-evolution-chip__ripple--primary'
      {{did-insert this.attachRipple}}
    ></span>
    {{#if (and @selectable (not @hasGraphic))}}
      <MaterialChips::Chip::Button::Icon @onlyCheckmark={{true}} />
    {{/if}}
    {{yield
      (component 'material-chips/chip/button/text')
      (component 'material-chips/chip/button/icon')
      (component 'material-chips/chip/button/avatar')
    }}
  </button>
</span>