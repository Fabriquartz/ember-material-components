<span class="mdc-evolution-chip__graphic {{@class}}" ...attributes>
  {{#unless @onlyCheckmark}}
    <MaterialIcon
      @class="mdc-evolution-chip__icon mdc-evolution-chip__icon--primary"
    >
      {{yield}}
    </MaterialIcon>
  {{/unless}}
  <span class="mdc-evolution-chip__checkmark">
    <svg class="mdc-evolution-chip__checkmark-svg" viewBox="-2 -3 30 30">
      <path
        class="mdc-evolution-chip__checkmark-path"
        fill="none"
        stroke="black"
        d="M1.73,12.91 8.1,19.28 22.79,4.59"
      ></path>
    </svg>
  </span>
</span>