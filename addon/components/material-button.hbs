<div class='mdc-touch-target-wrapper {{@class}}' {{did-insert this.didInsert}}>
  <button
    class='mdc-button mdc-button--touch
      {{if @raised "mdc-button--raised" (if @outlined "mdc-button--outlined")}}
      {{if @unelevated "mdc-button--unelevated"}}
      {{if @hasLeadingIcon "mdc-button--icon-leading"}}
      {{if @hasTrailingIcon "mdc-button--icon-trailing"}}'
    ...attributes
    type='button'
  >
    <span class='mdc-button__ripple'></span>
    <span class='mdc-button__touch'></span>
    {{yield
      (component 'material-icon' class='mdc-button__icon')
      (component 'material-button/text')
    }}
  </button>
</div>