<div class="demo-title">
  One-lined list width leading and trailing icons
</div>
<div class="demo-card demo-card--material-list">
  <MaterialList>
    <MaterialList::Item @activated={{true}} as |item|>
      <item.iconLeading>
        plumbing
      </item.iconLeading>
      Mario
    </MaterialList::Item>
    <MaterialList::Item as |item|>
      <item.iconLeading>
        favorite
      </item.iconLeading>
      Princess Peach
    </MaterialList::Item>
    <MaterialList::Item as |item|>
      <item.iconLeading>
        bolt
      </item.iconLeading>
      Bowser
    </MaterialList::Item>
    <MaterialList::Divider />
    <MaterialList::Item as |item|>
      <item.iconLeading>
        egg
      </item.iconLeading>
      Yoshi
      <item.iconTrailing>
        info
      </item.iconTrailing>
    </MaterialList::Item>
    <MaterialList::Item as |item|>
      <item.iconLeading>
        star
      </item.iconLeading>
      Toad
      <item.iconTrailing>
        info
      </item.iconTrailing>
    </MaterialList::Item>
  </MaterialList>
</div>
