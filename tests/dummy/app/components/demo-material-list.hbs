      <item.icon @leading={{true}}>
        plumbing
      </item.icon>
      <item.text>
        <:primary>
          Two lined text item
        </:primary>
        <:secondary>
          secondary text
        </:secondary>
      </item.text>
    </Item>
    <Item as |item|>
      <item.icon @leading={{true}}>
        favorite
      </item.icon>
      <item.text>
        <:primary>
          Two lined text item
        </:primary>
        <:secondary>
          secondary text
        </:secondary>
      </item.text>
    </Item>
  </MaterialList>
</div>