<div class='demo-title'>
  Inputs
</div>
<div class='demo-card demo-card--text-field demo-card--grid'>

  <MaterialTextField class='grid-item--4' as |Label TextInput|>
    <Label>
      Default
    </Label>
    <TextInput @value={{this.textInputValue}} {{on 'input' this.onInput}} />
  </MaterialTextField>
  <MaterialTextField
    class='grid-item--2'
    @hasLeadingIcon={{true}}
    @hasTrailingIcon={{true}}
    as |Label TextInput Icon Affix|
  >
    <Label>Required</Label>
    <Icon @leading={{true}}>person</Icon>
    <Affix @leading={{true}}>@</Affix>
    <TextInput
      @value={{this.textInputValue}}
      required='true'
      {{on 'input' this.onInput}}
    />
    <Icon>clear</Icon>
  </MaterialTextField>
  <div class='grid-item--2'>
    <MaterialTextField
      @hasTrailingIcon={{true}}
      class='grid-item--2'
      as |Label TextInput Icon Affix|
    >
      <Label>
        Min & max length
      </Label>
      <TextInput
        @value={{this.textInputValue}}
        minLength='5'
        maxLength='10'
        {{on 'input' this.onInput}}
      />
      <Affix>suffix</Affix>
      <Icon>star</Icon>
    </MaterialTextField>
    <MaterialTextField::HelperText>
      Between 5 and 10 characters
    </MaterialTextField::HelperText>
  </div>
  <MaterialTextField
    class='grid-item--4'
    @textarea={{true}}
    as |Label TextArea|
  >
    <Label>
      Textarea
    </Label>
    <TextArea
      @value={{this.textInputValue}}
      maxLength='255'
      {{on 'input' this.onInput}}
    />
  </MaterialTextField>
  <MaterialTextField class='grid-item--2' as |Label TextInput|>
    <Label>
      Number
    </Label>
    <TextInput
      type='number'
      @value={{this.textInputValue}}
      {{on 'input' this.onInput}}
    />
  </MaterialTextField>
  <MaterialTextField class='grid-item--2' as |Label TextInput|>
    <Label>
      Datetime
    </Label>
    <TextInput
      type='datetime-local'
      @value={{this.textInputValue}}
      {{on 'input' this.onInput}}
    />
  </MaterialTextField>
  <MaterialTextField class='grid-item--2' as |Label TextInput|>
    <Label>
      Datetime
    </Label>
    <TextInput
      type='text'
      @value={{this.textInputValue}}
      disabled={{true}}
      {{on 'input' this.onInput}}
    />
  </MaterialTextField>
</div>
