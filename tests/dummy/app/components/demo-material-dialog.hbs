              {{lorem}}{{lorem}}{{lorem}}{{lorem}}{{lorem}}{{lorem}}{{lorem}}
            {{/let}}
          </p>
        </item.content>
        <item.footer as |Button|>
          <Button @unelevated={{true}} {{on 'click' close}}>
            Understood
          </Button>
        </item.footer>
      </:dialog>
    </MaterialDialog>
    <MaterialDialog @sheet={{true}} @fullscreen={{this.fullscreen}}>
      <:trigger as |open|>
        <Item
          @disabled={{not this.fullscreen}}
          {{on 'click' open}}
        >
          Sheet
        </Item>
      </:trigger>
      <:dialog as |item close|>
        <item.header>
          <:title>What's your favorite color?</:title>
          <:close as |IconButton|>
            <IconButton {{on 'click' close}}>close</IconButton>
          </:close>
        </item.header>
        <item.content>
          <MaterialList @avatar={{true}} as |Item|>
            <Item as |item|>
              <item.radioButton @leading={{true}} />
              Blue
            </Item>
            <Item as |item|>
              <item.radioButton @leading={{true}} />
              Yellow
            </Item>
            <Item as |item|>
              <item.radioButton @leading={{true}} />
              Four
            </Item>
          </MaterialList>
        </item.content>
      </:dialog>
    </MaterialDialog>
  </MaterialList>
</div>